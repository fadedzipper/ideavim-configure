set hlsearch
set incsearch
set ignorecase
set smartcase
set showmode
set number
set history=100000

nnoremap <Space>n :nohlsearch<CR>
nnoremap <Space>q  :q<CR>
nnoremap <Space>s :w<CR>
nnoremap <C-p> :action GotoFile<CR>
nnoremap <C-f> :action GotoClass<CR>
inoremap <C-j> <Down>
inoremap <C-k> <Up>
inoremap <C-l> <Right>
inoremap <C-p> <Up>
inoremap <C-n> <Down>
inoremap jk <Esc>
nnoremap H ^
nnoremap L $
nnoremap R gt
nnoremap E gT
nnoremap gh <C-q>

" Redo
nnoremap U <C-r>

" Yank to the end of line
nnoremap Y y$

" Window operation
nnoremap <Space>ww <C-W>w
nnoremap <Space>wd <C-W>c
nnoremap <Space>wj <C-W>j
nnoremap <Space>wk <C-W>k
nnoremap <Space>wh <C-W>h
nnoremap <Space>wl <C-W>l
nnoremap <Space>ws <C-W>s
nnoremap <Space>w- <C-W>s
nnoremap <Space>wv <C-W>v
nnoremap <Space>w\| <C-W>v

" format
nnoremap <Space>i :action ReformatCode<CR>

""" Map leader to space ---------------------
let mapleader=","

""" Plugins  --------------------------------
set surround
set multiple-cursors
set argtextobj
set easymotion
set textobj-entire

""" Plugin settings -------------------------
let g:argtextobj_pairs="[:],(:),<:>"

""" Mappings --------------------------------
map <leader>r <Action>(Run)
map <leader>d <Action>(Debug)
map <F11> <Action>(ToggleFullScreen)
map <leader>c <Action>(Stop)
map <leader>z <Action>(ToggleDistractionFreeMode)
map <leader>q <Action>(HideActiveWindow)

map <leader>j <C-;>
map <leader>w <leader><leader>w
map <leader>b <leader><leader>b

map <Space>r <Action>(RenameElement)
map <Space>d <Action>(SelectInProjectView)

map <Space>o <Action>(FileStructurePopup)
map <Space>p <Action>(ParameterInfo)
map <Space>f <Action>(GotoSymbol)
